<!DOCTYPE html>
<html>
<%- include ./partials/menu.ejs %>

<head>
  <meta charset="utf-8">
  <title>Data Menu</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.css">
</head>

<body>
  <div class="content" id="container">
    <h4 align='center'>Data Menu</h4>
    <hr>
    <!-- <form class="" action="/users/add" method="post"> -->
      <table class="striped" style="width:80%" align='center'>
        <thead>
          <tr>

            <td><b>ID</b></td>
            <td><b>NAME</b></td>
            <td><b>PRICE</b></td>
            <td><b>TAG</b></td>
            <td><b>PICTURE</b></td>
            <td><b>RESTO NAME</b></td>
            <td><b>ACTION</b></td>

          </tr>
        </thead>
        <tbody>

          <%
              menu.forEach((value)=>{
            %>
            <tr>

              <td>
                <%= value.id%>
              </td>
              <td>
                <%= value.name%>
              </td>
              <td>
                <%= value.price%>
              </td>
              <td>
                <%= value.tag%>
              </td>
              <td>
                <%= value.picture%>
              </td>
              <td>
                <%= value.Resto.name %>
              </td>
              <td><a href="/users/edit/<%=value.id%>">EDIT</a> | <a href="/users/delete/<%=value.id%>" onclick="confirm('Are you Sure want to delete?')">DELETE</a></td>

            </tr>
            <%
            })
            %>
        </tbody>
      </table>

    </form>
  </div>
</body>
</html>